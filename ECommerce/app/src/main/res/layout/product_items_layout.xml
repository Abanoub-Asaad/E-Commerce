<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@android:color/background_dark"
    app:cardElevation="50dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/product_name_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@android:color/background_dark"
            android:textColor="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/product_image_home"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"

            />

        <TextView
            android:id="@+id/product_price_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_home"
            android:text="Product Price"
            android:textAlignment="center"
            android:textSize="18dp"
            android:background="@android:color/background_dark"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/product_description_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_home"
            android:text="Product Description"
            android:layout_marginTop=".1dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:background="@android:color/background_dark"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>



</androidx.cardview.widget.CardView>